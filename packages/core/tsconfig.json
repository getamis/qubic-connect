{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "types": ["preact"],
    "declaration": true,
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    // "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "target": "ES5",
    "module": "commonjs"
  },
  "exclude": ["coverage", "dist/**", "node_modules", "**/__tests__", "**/__mocks__"]
}
